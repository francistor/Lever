{
    "__COMMENT": "Use transport names and properties as specified in https://github.com/winstonjs/winston/blob/master/docs/transports.md",

    "_messageLogLevel": "verbose",

    "console":{
        "type": "Console",
        "properties": {"timestamp": true, "level": "verbose"}
